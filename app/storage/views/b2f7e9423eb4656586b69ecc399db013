
<?php if ($paginator->getLastPage() > 1): ?>
<?php $previousPage = ($paginator->getCurrentPage() > 1) ? $paginator->getCurrentPage() - 1 : 1; ?>  
<ul class="ui pagination menu">  
  <a href="<?php echo $paginator->getUrl(1); ?>"
    <?php echo ($paginator->getCurrentPage() == 1) ? ' disabled' : ''; ?>>
    <i class="icon left arrow"></i> 首页
  </a>
  <a href="<?php echo $paginator->getUrl($previousPage); ?>"
    <?php echo ($paginator->getCurrentPage() == 1) ? ' disabled' : ''; ?>>
    <i class="icon left arrow"></i> 上页
  </a>
  <?php for ($i = 1; $i <= $paginator->getLastPage(); $i++): ?>
  <a href="<?php echo $paginator->getUrl($i); ?>"
    class="item<?php echo ($paginator->getCurrentPage() == $i) ? ' active' : ''; ?>">
      <?php echo $i; ?>
  </a>
  <?php endfor; ?>
  <a href="<?php echo ($paginator->getCurrentPage() == $paginator->getLastPage())? $paginator->getUrl($paginator->getLastPage()):$paginator->getUrl($paginator->getCurrentPage()+1); ?>"
    class="item<?php echo ($paginator->getCurrentPage()== $paginator->getLastPage()) ? ' disabled' : ''; ?>">
    下页 <i class="icon right arrow"></i>
  </a>
  <a href="<?php echo $paginator->getUrl($paginator->getLastPage()); ?>"
    class="item<?php echo ($paginator->getCurrentPage() == $paginator->getLastPage()) ? ' disabled' : ''; ?>">
    尾页 <i class="icon right arrow"></i>
  </a>
</ul>  
<?php endif; ?>

